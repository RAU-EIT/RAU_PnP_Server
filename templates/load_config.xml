<?xml version="1.0" encoding="UTF-8"?>
<pnp xmlns="urn:cisco:pnp" version="1.0" udi="{{ udi }}">
  <request correlator="{{ correlator_id }}" xmlns="urn:cisco:pnp:config-upgrade">
    <config details="all">
      <copy>
        <source>
		      <location>http://{{ http_server }}/configs/{{ config_filename }}.cfg</location>
        </source>
        <applyTo>startup</applyTo>
      </copy>
    </config>
    <reload>
      <reason>PNP Configuration Push</reason>
      <user>admin</user>
    </reload>
  </request>
</pnp>
